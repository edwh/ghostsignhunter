<phpunit beStrictAboutTestsThatDoNotTestAnything="false">
    <testsuites>
        <testsuite name="Unit Tests">
            <directory>test/ut/php</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist addUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">/var/www/ghostsigns/http/api</directory>
            <directory suffix=".php">/var/www/ghostsigns/include</directory>
            <exclude>
                <directory suffix=".php">lib</directory>
            </exclude>
        </whitelist>
    </filter>
</phpunit>
